<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:layout_height="match_parent"
    android:background="@color/colorBack"
    tools:context="com.armjld.eb3tly.Settings.ChangePassword">

    <include
        android:id="@+id/toolbar_home"
        layout="@layout/toolbar_white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/toolbar_home"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back_white" />

    <EditText
        android:id="@+id/txtEditPassword"
        android:layout_width="280dp"
        android:layout_height="47dp"
        android:drawableRight="@drawable/ic_add_key"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="كلمة السر الجديدة"
        android:inputType="textPassword"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textColorHint="@android:color/secondary_text_light"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOldPassword"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/txtOldPassword"
        android:layout_width="280dp"
        android:layout_height="47dp"
        android:drawableRight="@drawable/ic_add_key"
        android:layout_marginTop="74dp"
        android:ems="10"
        android:hint="كلمه السر القديمة"
        android:inputType="textPassword"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textColorHint="@android:color/secondary_text_light"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_home"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/txtEditPassword2"
        android:layout_width="280dp"
        android:layout_height="47dp"
        android:drawableRight="@drawable/ic_add_key"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="اعادة كتابه كلمة السر الجديدة"
        android:inputType="textPassword"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textColorHint="@android:color/secondary_text_light"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEditPassword"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEditInfo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_defult"
        android:text="تغيير كلمه السر"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEditPassword2"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>